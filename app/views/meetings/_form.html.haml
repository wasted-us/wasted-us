= form_for @meeting do |f|
  - if @meeting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meeting.errors.count, "error")} prohibited this meeting from being saved:"
      %ul
        - @meeting.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :participant_count
    = f.number_field :participant_count
  .field
    = f.label :salary
    = f.text_field :salary
  .field
    = f.label :cost
    = f.text_field :cost
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :agenda
    = f.text_field :agenda
  .field
    = f.label :actions
    = f.text_field :actions
  .actions
    = f.submit 'Save'
