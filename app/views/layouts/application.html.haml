    = yield :css
    %link{href: "http://fonts.googleapis.com/css?family=Oxygen", rel: "stylesheet", type: "text/css"}/
    = csrf_meta_tags
  %body
    = yield
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = yield :javascript